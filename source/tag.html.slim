---
pageable: true
per_page: 2
---

.section
  .content
    h1.title Articles tagged #{tagname}
    .container
      .section
        - page_articles.each_with_index do |article, i|
          h4 = link_to article.title, article
          p = article.summary
          h6 = article.date.strftime('%b %e %Y')
          div.tags
            - article.tags.each do |tag|
              span.tag: a href='#{tag_path(tag)}' = tag

      - if paginate
        - if next_page
          p.pagination-next = link_to 'Next page', next_page

      - if prev_page
        p.pagination-previous.is-pulled-right = link_to 'Previous page', prev_page

      - if paginate && num_pages > 1
        .has-text-centered
          h3 = page_number
